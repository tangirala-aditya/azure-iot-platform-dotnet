{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appConfigName": {
            "type": "string",
            "defaultValue": "crsliot-appconfig-dev",
            "metadata": {
                "description": "Name of the App config resoutrce to be created."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for the resource"
            }
        }
    },
    "variables": {
        "identityName": "[concat(split(parameters('appConfigName'),'-')[0] ,'-umid-' , split(parameters('appConfigName'),'-')[2])]"   
    },
    "resources": [
        {
            "name": "[parameters('appConfigName')]",
            "type": "Microsoft.AppConfiguration/configurationStores",
            "apiVersion": "2019-10-01",
            "location": "[parameters('location')]",
            "tags": {},
            "identity": {
                "type":"userAssigned",
                "userAssignedIdentities":{
                    "[resourceID('Microsoft.ManagedIdentity/userAssignedIdentities/',variables('identityName'))]": {}
                }
            },
            "properties": {
                "endpoint": "[concat('https://', parameters('appConfigName'), '.azconfig.io')]"
            },
            "sku": {
                "name": "standard"
            }
        }
    ]
}