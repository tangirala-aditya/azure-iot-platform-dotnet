{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "resourceName": {
        "minLength": 2,
        "type": "string",
        "metadata": {
          "description": "Name of the the Keyvault"
        }
      },
      "settingName": {
        "type": "string",
        "metadata": {
          "description": "Setting Name of the Application to be added to Access policy"
        }
      },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "403f2258-d6b0-4c0a-b565-4102510935aa",
            "metadata": {
                "description": "Subscription Id where storage account exists"
            }
        },
        "resourceGroup": {
            "type": "string",
            "defaultValue": "rg-crsliot-dev",
            "metadata": {
                "description": "Resource group name where storage account exists"
            }
        },
        "environmentCategory": {
            "type": "string",
            "defaultValue": "dev",
            "metadata": {
                "description": "Name of the Log Analytics Workspace"
            }
        },
        "applicationCode": {
            "type": "string",
            "defaultValue": "crsliot",
            "metadata": {
                "description": "Name of the Log Analytics Workspace"
            }
        },      
      "userObjId": {
        "type": "string",
        "metadata": {
          "description": "Object Id of the User to be added to Access policy"
        }
      },
      "applicationObjId": {
        "type": "string",
        "metadata": {
          "description": "Object Id of the Application to be added to Access policy"
        }
      },
      "enableSoftDelete": {
        "type": "bool",
        "metadata": {
          "description": "Enable SoftDelete feature in key vault"
        }
    },  
    "softDeleteRetentionInDays": {
       "type": "int",
       "metadata": {
        "description": "Set the retention period for soft-delete"
      }
    }  
    },
    "variables": {
      "location": "[resourceGroup().location]",
      "identityName": "[concat(resourceGroup().Name,'-')[2] ,'iot-umid-' , split(resourceGroup().Name,'-')[2])]",
      "workSpaceID": "[concat('/subscriptions/',parameters('subscriptionId'),'/resourceGroups/',parameters('resourceGroup'),'/providers/microsoft.operationalinsights/workspaces/',parameters('applicationCode'),'-loganalyticsws-',parameters('environmentCategory'))]",
      "settingsName": "[concat(parameters('applicationCode'),'-diagnosticsetting-',parameters('environmentCategory'))]",
      "funcapp1":  "[concat(split(parameter('resourceName'),'-')[0] ,'-devicetwinfuncapp-' , split(parameter('resourceName'),'-')[2])]",
      "funcapp3":  "[concat(split(parameter('resourceName'),'-')[0] ,'-iotdeploymentfuncapp-' , split(parameter('resourceName'),'-')[2])]",
      "funcapp4":  "[concat(split(parameter('resourceName'),'-')[0] ,'-alertingactionsfuncapp-' , split(parameter('resourceName'),'-')[2])]",
      "funcapp6":  "[concat(split(parameter('resourceName'),'-')[0] ,'-batchprocessorfuncapp-' , split(parameter('resourceName'),'-')[2])]",
    },
    "resources": [
      {
        "type": "Microsoft.KeyVault/vaults",
        "name": "[parameters('resourceName')]",
        "apiVersion": "2016-10-01",
        "location": "[variables('location')]",
        "tags": {},
        "properties": {
          "sku": {
            "family": "A",
            "name": "standard"
          },
          "enableSoftDelete": "[parameters('enableSoftDelete')]",
          "softDeleteRetentionInDays": "[parameters('softDeleteRetentionInDays')]",
          "tenantId": "[subscription().tenantId]",
          "accessPolicies": [
            {
              "condition": "[not(empty(parameters('userObjId')))]",
              "objectId": "[parameters('userObjId')]",
              "tenantId": "[subscription().tenantid]",
              "permissions": {
                "keys": [],
                "secrets": [
                  "get",
                  "list",
                  "set",
                  "delete",
                  "recover",
                  "backup",
                  "restore"
                ],
                "certificates": [
                  "get",
                  "list",
                  "update",
                  "delete",
                  "recover",
                  "create"
                ]
              }
            },
            {
              "condition": "[not(empty(parameters('applicationObjId')))]",
              "objectId": "[parameters('applicationObjId')]",
              "tenantId": "[subscription().tenantid]",
              "permissions": {
                "keys": [
                  "get",
                  "list"
                ],
                "secrets": [
                  "get",
                  "list",
                  "set",
                  "delete",
                  "recover",
                  "backup",
                  "restore"
                ],
                "certificates": [
                  "get",
                  "list",
                  "update",
                  "delete",
                  "recover",
                  "create",
                  "import"
                ]
              }
            },
            {
              "tenantId": "[subscription().tenantid]",
              "objectId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('identityName')),'2018-11-30').principalId]",
              "permissions": {
                 "keys": [],
                 "secrets": [
                    "get",
                    "list"
                  ],
                  "certificates": []
                }
            },
          {            
            "tenantId": "[subscription().tenantid]",
            "objectId": "[reference(resourceId('Microsoft.Web/sites', variables('funcapp1')), '2016-08-01', 'Full').identity.principalId]",
            "permissions": {
               "keys": [],
               "secrets": [
                  "get",
                  "list"
                ],
                "certificates": []
              }  
          },
          {            
            "tenantId": "[subscription().tenantid]",
            "objectId": "[reference(resourceId('Microsoft.Web/sites', variables('funcapp3')), '2016-08-01', 'Full').identity.principalId]",
            "permissions": {
               "keys": [],
               "secrets": [
                  "get",
                  "list"
                ],
                "certificates": []
              }  
          },
          {            
            "tenantId": "[subscription().tenantid]",
            "objectId": "[reference(resourceId('Microsoft.Web/sites', variables('funcapp4')), '2016-08-01', 'Full').identity.principalId]",
            "permissions": {
               "keys": [],
               "secrets": [
                  "get",
                  "list"
                ],
                "certificates": []
              }  
          },
          {            
            "tenantId": "[subscription().tenantid]",
            "objectId": "[reference(resourceId('Microsoft.Web/sites', variables('funcapp6')), '2016-08-01', 'Full').identity.principalId]",
            "permissions": {
               "keys": [],
               "secrets": [
                  "get",
                  "list"
                ],
                "certificates": []
              }  
          }
          ]
        },
        "resources":[
          {
          "type": "providers/diagnosticsettings",
          "name": "[concat('/Microsoft.Insights/', variables('settingsName'))]",
          "apiVersion": "2021-05-01-preview",
          "location": "[variables('location')]",
          "dependsOn": [
            "[concat('Microsoft.KeyVault/vaults/', parameters('resourceName'))]"
        ],
          "properties": {
            "workspaceId": "[variables('workSpaceID')]",
            "logs": [
              {
                "category": "AuditEvent",
                "enabled": true
              }
            ],
                "metrics": [
                  {
                    "category": "AllMetrics",
                    "enabled": true
                  }
                ]
          }
        }
          ]
    }   
    ],
    "outputs": {
      "CloudResourceName": {
        "value": "[parameters('resourceName')]",
        "type": "string"
      },
      "CloudResourceUri": {
        "value": "",
        "type": "string"
      },
      "CloudResourceType": {
        "value": "Key vault",
        "type": "string"
      }
    }
  }
