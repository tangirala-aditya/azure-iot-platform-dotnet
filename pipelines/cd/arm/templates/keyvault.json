{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "resourceName": {
        "minLength": 2,
        "type": "string",
        "metadata": {
          "description": "Name of the the Keyvault"
        }
      },
      "userObjId": {
        "type": "string",
        "metadata": {
          "description": "Object Id of the User to be added to Access policy"
        }
      },
      "applicationObjId": {
        "type": "string",
        "metadata": {
          "description": "Object Id of the Application to be added to Access policy"
        }
      },
      "settingName": {
        "type": "string",
        "metadata": {
          "description": "Setting Name of the Application to be added to Access policy"
        }
      },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "403f2258-d6b0-4c0a-b565-4102510935aa",
            "metadata": {
                "description": "Subscription Id where storage account exists"
            }
        },
        "resourceGroup": {
            "type": "string",
            "defaultValue": "rg-crsliot-dev",
            "metadata": {
                "description": "Resource group name where storage account exists"
            }
        },
        "environmentCategory": {
            "type": "string",
            "defaultValue": "dev",
            "metadata": {
                "description": "Name of the Log Analytics Workspace"
            }
        },
        "applicationCode": {
            "type": "string",
            "defaultValue": "crsliot",
            "metadata": {
                "description": "Name of the Log Analytics Workspace"
            }
        }
    },

    "variables": {
      "location": "[resourceGroup().location]",
      "workSpaceID": "[concat('/subscriptions/',parameters('subscriptionId'),'/resourceGroups/',parameters('resourceGroup'),'/providers/microsoft.operationalinsights/workspaces/',parameters('applicationCode'),'-loganalyticsws-',parameters('environmentCategory'))]"
    },
    "resources": [
      {
        "type": "Microsoft.KeyVault/vaults",
        "name": "[parameters('resourceName')]",
        "apiVersion": "2016-10-01",
        "location": "[variables('location')]",
        "tags": {},
        "properties": {
          "sku": {
            "family": "A",
            "name": "standard"
          },
          "tenantId": "[subscription().tenantId]",
          "accessPolicies": [
            {
              "condition": "[not(empty(parameters('userObjId')))]",
              "objectId": "[parameters('userObjId')]",
              "tenantId": "facac3c4-e2a5-4257-af76-205c8a821ddb",
              "permissions": {
                "keys": [],
                "secrets": [
                  "get",
                  "list",
                  "set",
                  "delete",
                  "recover",
                  "backup",
                  "restore"
                ],
                "certificates": [
                  "get",
                  "list",
                  "update",
                  "delete",
                  "recover",
                  "create"
                ]
              }
            },
            {
              "condition": "[not(empty(parameters('applicationObjId')))]",
              "objectId": "[parameters('applicationObjId')]",
              "tenantId": "facac3c4-e2a5-4257-af76-205c8a821ddb",
              "permissions": {
                "keys": [
                  "get",
                  "list"
                ],
                "secrets": [
                  "get",
                  "list",
                  "set",
                  "delete",
                  "recover",
                  "backup",
                  "restore"
                ],
                "certificates": [
                  "get",
                  "list",
                  "update",
                  "delete",
                  "recover",
                  "create",
                  "import"
                ]
              }
            }
          ]
        }
      },
      {
      "type": "Microsoft.KeyVault/vaults/providers/diagnosticsettings",
      "name": "[concat(parameters('resourceName'), '/Microsoft.Insights/', 'service')]",
      "apiVersion": "2016-09-01",
      "location": "[variables('location')]",
      "properties": {
        "workspaceId": "[variables('workSpaceID')]",
        "logs": [
          {
            "category": "AuditEvent",
            "enabled": true,
            "retentionPolicy": {
              "enabled": true,
              "days": "10"
            }
          }
        ],
            "metrics": [
              {
                "category": "AllMetrics",
                "enabled": true
              }
            ]
      }
    }
    ],
    "outputs": {
      "CloudResourceName": {
        "value": "[parameters('resourceName')]",
        "type": "string"
      },
      "CloudResourceUri": {
        "value": "",
        "type": "string"
      },
      "CloudResourceType": {
        "value": "Key vault",
        "type": "string"
      }
    }
  }